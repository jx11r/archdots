(
  max_notifications: 0,
  timeout: 10000,
  poll_interval: 16,
  // idle_threshold: 3600,
  replacing_enabled: true,
  replacing_resets_timeout: true,
  debug: false,

  layout_blocks: [
    (
      name: "root",
      parent: "",
      hook: Hook(parent_anchor: TR, self_anchor: TR),
      offset: Vec2(x: -25.0, y: 61.0),
      params: NotificationBlock((
        background_color: Color(hex: "#1E1E2E"),
        border_color: Color(hex: "#1E1E2E"),
        border_rounding: 0.0,
        border_width: 0.0,
        gap: Vec2(x: 0.0, y: 8.0),
        monitor: 0,
        notification_hook: Hook(parent_anchor: BR, self_anchor: TR),
      )),
    ),

    (
      name: "image",
      parent: "root",
      hook: Hook(parent_anchor: TL, self_anchor: TL),
      offset: Vec2(x: 0.0, y: 0.0),
      params: ImageBlock((
        filter_mode: Lanczos3,
        image_type: Hint,
        padding: Padding(left: 10.0, right: 0.0, top: 10.0, bottom: 10.0),
        rounding: 5.0,
        scale_width: 65,
        scale_height: 65,
      )),
    ),

    (
      name: "summary",
      parent: "image",
      hook: Hook(parent_anchor: MR, self_anchor: BL),
      offset: Vec2(x: 0.0, y: 0.0),
      params: TextBlock((
        color: Color(hex: "#F5C2E7"),
        dimensions: (width: (min: 150, max: 300), height: (min: 0, max: 0)),
        ellipsize: End,
        font: "Noto Sans Bold 10",
        padding: Padding(left: 10.0, right: 10.0, top: 10.0, bottom: 2.5),
        text: "%s",
      )),
    ),

    (
      name: "body",
      parent: "summary",
      hook: Hook(parent_anchor: BL, self_anchor: TL),
      offset: Vec2(x: 0.0, y: 0.0),
      params: ScrollingTextBlock((
        color: Color(hex: "#CDD6F4"),
        font: "Noto Sans 9",
        lhs_dist: 15.0,
        padding: Padding(left: 10.0, right: 10.0, top: 2.5, bottom: 10.0),
        rhs_dist: 15.0,
        scroll_speed: 0.1,
        scroll_t: 1.0,
        text: "%b",
        width: (min: 150, max: 300),
      )),
    ),
  ],

  shortcuts: ShortcutsConfig (
    notification_interact: 1,
    notification_close: 2,
    notification_action1: 3,
  ),
)
